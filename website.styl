
bgsize(n)
  -moz-background-size: n
  -o-background-size: n
  background-size: n
  -webkit-background-size: n

.container, html
  height: 100%

body
  padding-bottom: 0px
  font-size: 18px
  font-weight: 200
  line-height: 27px
  background: url('bg.jpg') fixed
  bgsize(cover)

#cover
  background: url('')
  background-color: transparent

h1
  padding-bottom: 10px
  font-size: 250% !important

.navbar .brand
  display: block
  float: right
  padding: 18px 20px 12px
  margin-left: -20px
  font-size: 40px
  font-weight: 800
  line-height: 1
  color: #fff

.navbar-inner
  height: 80px
  border-bottom: white solid
  border-top: white solid

.navbar .nav .active > a, .navbar .nav .active > a:hover
  background-color: #900

.navbar .nav > li > a
  font-size: 120%
  padding: 30px

.row:nth-child(2) .hero-unit
  text-align: right

.row:nth-child(3) .hero-unit,
.row:nth-child(4) .hero-unit,
.row:nth-child(5) .hero-unit
  background: none
  color: white

.row:nth-child(3) .hero-unit a
  color: skyblue

.row:nth-child(3) .hero-unit tr:hover
  color: black

.row:nth-child(3) .hero-unit tr:hover a,
.dropdown-menu li > a
  color: #999

.dropdown-menu
  margin-top: -1px

.row:nth-child(5)
  background none
  .row
    margin-top: 50px
    padding-top: 0px
    background none
    background-color: #fff
    padding-bottom 0px

.row
  background: url('img/wood.jpg')
  background-color: #000
  padding-top 150px
  padding-bottom 150px
  min-height 100%
  bgsize(cover)

.hero-unit
  background: rgba(255, 255, 255, 0.8 )

.center
  margin-left: auto
  margin-right: auto

.txcenter
  text-align: center

.txleft
  text-align: left

.txright
  text-align: right

#awardstbl tr
  font-size: 20px
  line-height: 1.5

#awardstbl td
  padding: 10px

#footer
  float: left

#copyright
  float: right

#footer, #copyright
  padding-top: 0px
  padding-bottom: 0px
  color: #666

#footer-container
  height 30px
  background-color #000
  width 100%
  vertical-align middle

.contact-icon
  width: 64px
  height: 64px
  margin-top: -35px

i[class*='icon-']
    background-size: 54px
    background-repeat: no-repeat
    background-position: center
    display: inline-block;
    vertical-align: middle
    -o-transition: all .3s
    -moz-transition: all .3s
    -webkit-transition: all .3s
    -ms-transition: all .3s

i[class*='icon-']:hover
    background-position: center top 

.icon-fb
  background-image: url('../icon/facebook.png')

.icon-ig
  background-image: url('icon/instagram.png')

.icon-tw
  background-image: url('icon/twitter.png')

.icon-in
  background-image: url('icon/linkedin.png')

.icon-gp
  background-image: url('icon/googleplus.png')

.icon-gm
  background-image: url('icon/gmail.png')

.icon-gh
  background-image: url('icon/github.png') 

#profilepic
  background: url('homingli.jpg') center no-repeat #fff
  background-size: 250px 250px
  width: 230px
  height: 250px
  border: solid white
  -webkit-border-radius: 6px
  -moz-border-radius: 6px
  border-radius: 6px
  z-index: 1
  position: relative
  margin-left: 250px
  margin-top: -50px

.nav-tabs a
  font-size: 20px
  color: #ccc

.nav-tabs a:hover, .well
  color: black

.carousel .item > img
  margin-left: auto
  margin-right: auto

#work .tab-content
  min-height: 200px

#schoolproj-hw .tab-content
  min-height: 250px

#otherproj .tab-content
  min-height: 120px

div#w1 img,
div#w4 img,
div#w5 img
  height: 80px

#w1 *,
#w2 *,
#w3 *,
#w4 *,
#w5 *,
#w6 *,
#ss3 .item,
#hp4 .item,
#hp5 .item
  text-align: center

ul.nav.nav-tabs
  margin: 0px

.tab-content.well
  border-radius: 0px
  background-color: #fff

#myTab.nav li a
  padding-right: 30px

.caret
  opacity: 1
  border-top-color: #ccc !important

#layoutscarousel .carousel-control
  top: -20px
  padding-top: 0px
  width: 30%
  height: 30px
  line-height: 20px

.carousel-control
  opacity: 0.1
  font-size: 3em

#layoutscarousel .carousel-control.left
  left: 200px

#layoutscarousel .carousel-control.right
  right: 10px

div[id*=hp]:not(#hp4):not(#hp4carousel) img
  width: 400px

#hp5carousel .active img
  display: inline

#m-portfolio
  display: none
  visibility: hidden

@media (max-width: 979px)
  .row
    padding: 0px

  .hero-unit p,
    .hero-unit td,
    .hero-unit li,
    .hero-unit h3
    font-size: 80%

  .hero-unit h1
    font-size: 200%

  .navbar-inner
    height: auto

  .navbar .brand
    font-size: 20px
    padding: 10px

  .nav-collapse.collapse .nav > li > a
    margin-bottom: 0px
    font-size: 16px
    padding: 10px
    border: 2px solid black

  #contact div.span2.row-inner
    margin-top: 20px


  #footer, #copyright
    font-size: 80%

  #portfolio .nav-tabs,
    #portfolio .tab-content
    display: none
    visibility: hidden

  #profilepic
    margin-top: 50px
    margin-bottom: -50px
    margin-left: auto
    margin-right: auto

  #m-portfolio
    display: inherit
    visibility: visible

